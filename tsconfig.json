{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "commonjs",
    "newLine": "LF",
    "sourceMap": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "lib": [
      "dom",
      "es7"
    ],
    "baseUrl": "./src",
    "paths": {
      "utils": [
        "./utils"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "sample/**/*",
    "test/**/*"
  ]

}
